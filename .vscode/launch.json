  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/debug/app.js",
      "runtimeExecutable": "nodemon",
      // 코드가 변경될 때마다 디버깅 새로 시작 가능
      "restart": true
    }
  ]
}
